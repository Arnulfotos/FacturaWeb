@model FacturaWeb.Models.Factura

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Factura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaAlta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaAlta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPago)
        </dd>
        <dt class="col-sm-2">
            Productos
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.FacturaDetalles)
                {
                    string selectedRow = "table-success";
                    /*if (item.FacturaID == Model.Fac)
                    {
                    selectedRow = "table-success";
                    } */
                    <tr class="@selectedRow">
                        <td>
                            @item.Producto.Descripcion
                        </td>
                        <td>
                            @item.Precio
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FacturaID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
